{
  "name": "pomodoro-flow",
  "version": "1.0.0",
  "description": "Pomodoro Flow â€” PWA + Electron scaffold",
  "main": "electron/main.js",
  "scripts": {
    "start-web": "npx serve -s . -l 8080",
    "start-electron": "electron .",
    "build": "echo \"No web build step configured; add your build pipeline if needed\"",
    "smoke:test": "node tools/pwa_smoke_test.js",
    "package-mac": "electron-builder --mac --x64",
    "package-all": "electron-builder"
  },
  "build": {
    "appId": "com.hzd96.pomodoro",
    "productName": "Pomodoro Flow",
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "asar": true
    }
  },
  "devDependencies": {
    "electron": "^39.2.0",
    "electron-builder": "^24.0.0",
    "puppeteer": "^24.30.0",
    "puppeteer-core": "^24.30.0"
  }
}
